<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme2">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
